{
    "name": "GIF Blocker",
    "version": "0.2",
    "description": "Fed up of distracting GIFs? Clean up your Internet Experience!",
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "manifest_version": 2,
    "icons": {
      "16": "16.png",
      "48": "48.png",
      "128": "128.png"
    },
    "browser_action": {
      "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ]
  }